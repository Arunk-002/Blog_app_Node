<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Home</title>
    <link rel="icon" type="image/x-icon" href="https://img.icons8.com/?size=100&id=18877&format=png&color=000000">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card-hover:hover {
            background-color: #f8f9fa; /* Light background on hover */
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Increase shadow on hover */
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Blog Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <% if (admin) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin">Admin Panel</a>
                        </li>
                    <% } %>
                    <% if (!admin && userName) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/user"><%= userName %> Blogs</a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Blog Content -->
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center">
            <h2>All Blogs</h2>
            <a href="/blog/add" class="btn btn-success">Create Blog</a>
        </div>

        <div class="row mt-4">
            <% if (blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <a href="/blog/<%= blog.id %>" class="text-decoration-none text-dark">
                            <div class="card h-100 shadow-sm card-hover"> <!-- Added card-hover class here -->
                                <div class="card-body">
                                    <h5 class="card-title"><%= blog.title %></h5>
                                    <p class="card-text"><%= blog.body.substring(0, 100) %>...</p>
                                    <h5 class="card-title">By <%= blog.authorId.name %></h5>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-center">No blogs available.</p>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
